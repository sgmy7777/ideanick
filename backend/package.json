{
  "name": "@ideanick/backend",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "ts-node-dev --watch ./src/emails/dist,./.env --rs --exit-child ./src/index.ts",
    "build-emails": "rimraf ./src/emails/dist && mkdir ./src/emails/dist && mjml ./src/emails/[!_]*.mjml -o ./src/emails/dist",
    "watch-emails": "mjml -w ./src/emails/[!_]*.mjml -o ./src/emails/dist",
    "copy-emails": "copyfiles ./src/emails/dist/*.html ./dist/backend",
    "build-ts": "rimraf ./dist && tsc --build ./tsconfig.json",
    "build": "pnpm build-ts && pnpm build-emails && pnpm copy-emails",
    "start": "node ./dist/backend/src/index.js",
    "pmd": "prisma migrate dev",
    "pgc": "prisma generate",
    "types": "tsc --noEmit --project ./tsconfig.json",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/.eslintcache --ext .ts .",
    "lint:fix": "eslint --fix --cache --cache-location ./node_modules/.cache/.eslintcache --ext .ts .",
    "prettify": "prettier --loglevel warn --cache --write '{src/**/*,*}.{ts,tsx,js,json,yml,scss}' '!**/{node_modules,dist}/**/*'",
    "prepare": "pnpm pgc && ts-patch install -s"
  },
  "prisma": {
    "schema": "./src/prisma/schema.prisma"
  },
  "devDependencies": {
    "@types/cors": "2.8.13",
    "@types/cron": "2.4.0",
    "@types/express": "4.17.17",
    "@types/jsonwebtoken": "9.0.2",
    "@types/lodash": "^4.17.16",
    "@types/node": "20.5.0",
    "@types/passport": "1.0.12",
    "@types/passport-jwt": "3.0.9",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "eslint": "8.47.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-import-resolver-typescript": "3.6.0",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-node": "11.1.0",
    "prisma": "5.2.0"
  },
  "dependencies": {
    "@ideanick/webapp": "workspace:*",
    "@ideanick/shared": "workspace:*",
    "@prisma/client": "5.2.0",
    "@trpc/server": "10.37.1",
    "axios": "1.5.0",
    "cors": "2.8.5",
    "cron": "2.4.3",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "fast-glob": "3.3.1",
    "handlebars": "4.7.8",
    "jsonwebtoken": "9.0.2",
    "lodash": "^4.17.21",
    "mjml": "4.14.1",
    "passport": "0.6.0",
    "passport-jwt": "4.0.1",
    "react-router-dom": "6.15.0",
    "superjson": "1.13.1",
    "trpc-playground": "1.0.4",
    "zod": "3.22.2"
  }
}
